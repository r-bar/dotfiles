#!/usr/bin/env python3

import sys
from pathlib import Path


def rtouch(path: str | Path):
    path = Path(path)
    if not path.exists():
        path.parent.mkdir(parents=True, exist_ok=True)
    path.touch(exist_ok=True)


def main():
    for path in sys.argv[1:]:
        rtouch(path)


if __name__ == '__main__':
    main()
