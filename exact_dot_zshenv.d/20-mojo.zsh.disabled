if [ -d "$HOME/.modular" ]; then
  export MODULAR_HOME="$HOME/.modular"
fi

if [ -d $HOME/.modular/pkg/packages.modular.com_mojo ]; then
  PATH_add "$HOME/.modular/pkg/packages.modular.com_mojo/bin"
  path_add LD_LIBRARY_PATH "$HOME/.modular/pkg/packages.modular.com_mojo/lib" "$HOME/.local/lib/mojo"
fi
